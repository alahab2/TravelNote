<!DOCTYPE html>
<html>
<head>
  <title>Travel Notes</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

	<nav class="navbar navbar-fixed-top">
	  <div class="container">
	    <!-- Brand and toggle get grouped for better mobile display -->
	    <div class="navbar-header">
	      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
	        <span class="sr-only">Toggle navigation</span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	        <span class="icon-bar"></span>
	      </button>
	      <%= link_to 'Travel Notes', root_path, class: 'navbar-brand' %>
	    </div>

	    <!-- Collect the nav links, forms, and other content for toggling -->
	    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
	      <ul class="nav navbar-nav">
	        <li><%= link_to 'Browse Notes', notes_path %></li>
	      </ul>
	      <ul class="nav navbar-nav navbar-right">
	        <% if user_signed_in? %>
	          <li><%= link_to 'New Note', new_note_path, class: "new-note-nav" %></li>	
	          <li class="dropdown">
	            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
	              <%= current_user.name %>
	              <span class="caret"></span>
	            </a>
	            <ul class="dropdown-menu" role="menu">
	              <li><%= link_to 'My Notes', user_path(current_user) %></li>
	              <li><%= link_to 'Profile', edit_user_registration_path(current_user) %></li>
	              <li><%= link_to 'Log out', destroy_user_session_path, method: :delete %></li>
	            </ul>
	          </li>
	        <% else %>
	          <li><%= link_to 'Log In', new_user_session_path %></li>
	          <li><%= link_to 'Sign Up', new_user_registration_path %></li>
	        <% end %>
	      </ul>
	    
	    </div><!-- /.navbar-collapse -->
	  </div><!-- /.container-fluid -->
	</nav> 

<body>

  <% flash.each do |key, value| %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>


<%= yield :top_content %>

<div class="container pageContent">
    <h1><%= yield :header %></h1>
    <%= yield %>
</div>

<footer><p>Created by <%= link_to 'Maria P', "http://codepen.io/Alahab2/", target: "_blank" %></p> </footer>
</body>

</html>
