<p>
  <strong>Title:</strong>
  <%= @note.title %>
</p>

<%= image_tag @note.image.url %>

<p>
  <strong>Location:</strong>
  <%= @note.location %>
</p>

<p>
  <strong>Text:</strong>
  <%= raw(@note.text) %>
</p>

<% if (user_signed_in? && (current_user.id == @note.user_id)) %>
<%= link_to 'Edit', edit_note_path(@note) %> |
<% end %>
<%= link_to 'Back to My Notes', user_path(current_user) %>
